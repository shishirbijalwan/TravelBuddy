<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shishirbijalwan.myapplication.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight=".25"
            android:textColor="#007FFF"
            android:ems="10"
            android:text="You are about to find a Buddy!!"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:gravity="center"
        android:orientation="vertical"

        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"

            android:gravity="center">


            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/style"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="  Name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">

            <EditText
                android:id="@+id/newUserEmail"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/style"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="  Email" />
        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">


            <EditText
                android:id="@+id/passwordTextBoxOne"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/style"
                android:layout_weight=".25"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="  Password" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">

            <EditText
                android:id="@+id/passwordTextBoxTwo"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/style"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="  Confirm Password" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:weightSum="1"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">
            <EditText
                android:id="@+id/dobUser"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/style"
                android:ems="10"
                android:inputType="date"
                android:hint="  MM/DD/YYYY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:weightSum="1">
            <Button
                android:id="@+id/createNewUserButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton"
                android:text="Create User"
                android:textSize="20sp"
                android:layout_weight="0.56" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:gravity="center">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/alreadyAccountTextView"/>
    </LinearLayout>

</LinearLayout>
